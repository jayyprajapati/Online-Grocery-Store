<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>TinyBasket</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    />
    <!-- –––––––––––––––––––––––––– Font Links–––––––––––––––––––––––––––––––––––––– -->
    <link
      href="https://fonts.googleapis.com/css2?family=Kalam:wght@700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Poiret+One&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Commissioner:wght@500&display=swap"
      rel="stylesheet"
    />
    <!-- –––––––––––––––––––––––––––––––––––––––––––––––––––––––––––––––––––––––––––––– -->
    <link rel="stylesheet" href="/css/userstyles.css" />
  </head>
  <body>
    <div class="div1">
      <img src="/imgs/img3.png" width="100%" height="100%" alt="" />
    </div>
    <div class="div">
      <img src="/imgs/titlelogo.png" width="80%" height="25%" alt="" />
      <div class="loginbtn">
        <button
          type="submit"
          class="btn btn-outline-light btn-lg ml-5 rounded-pill"
          data-toggle="modal"
          data-target="#signin"
          name="button"
        >
          Login
        </button>
        <button
          type="submit"
          class="btn btn-outline-light btn-lg ml-5 rounded-pill"
          data-toggle="modal"
          data-target="#signup"
          name="button"
        >
          Register
        </button>
        <button
          type="submit"
          class="btn btn-outline-light btn-lg ml-5 rounded-pill"
          data-toggle="modal"
          data-target="#admin"
          name="button"
        >
          admin
        </button>
      </div>
    </div>

    <!-- Modal -->
    <div
      class="modal fade"
      id="signin"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalCenterTitle"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title form-fonts" id="exampleModalLongTitle">
              Login
            </h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form class="form-fonts" action="/login" method="post">
              <div class="form-group">
                <label for="email">Email : </label>
                <input
                  class="form-control col-lg-8 mb-3"
                  type="email"
                  autocomplete="off"
                  name="username"
                  value=""
                  placeholder="Enter Email Id"
                />
                <label for="password">Password : </label>
                <input
                  class="form-control col-lg-8 mb-3"
                  type="password"
                  autocomplete="off"
                  name="password"
                  value=""
                  placeholder="Enter Password"
                />
              </div>
              <div class="modal-footer">
                <button type="submit" class="btn btn-dark form-fonts">
                  Go..
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <div
      class="modal fade"
      id="signup"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalCenterTitle"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title form-fonts" id="exampleModalLongTitle">
              Register
            </h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form class="form-fonts" action="/register" method="post">
              <div class="form-group">
                <label for="email">Email : </label>
                <input
                  class="form-control col-lg-8 mb-3"
                  type="email"
                  name="username"
                  autocomplete="off"
                  value=""
                  placeholder="Enter Email Id"
                  required
                />
                <label for="password">Password : </label>
                <input
                  class="form-control col-lg-8 mb-3"
                  type="password"
                  name="password"
                  value=""
                  placeholder="Enter Password"
                  required
                />
              </div>
              <div class="modal-footer">
                <button type="submit" class="btn btn-dark form-fonts">
                  Go..
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <div
      class="modal fade"
      id="admin"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalCenterTitle"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title form-fonts" id="exampleModalLongTitle">
              Admin access
            </h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form class="form-fonts" action="/adminlogin" method="post">
              <div class="form-group">
                <label for="email">Email : </label>
                <input
                  class="form-control col-lg-8 mb-3"
                  type="email"
                  autocomplete="off"
                  name="username"
                  value=""
                  placeholder="Enter Email Id"
                />
                <label for="password">Password : </label>
                <input
                  class="form-control col-lg-8 mb-3"
                  type="password"
                  autocomplete="off"
                  name="password"
                  value=""
                  placeholder="Enter Password"
                />
              </div>
              <div class="modal-footer">
                <button type="submit" class="btn btn-dark form-fonts">
                  Go..
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <script
      src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
      integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
      integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
